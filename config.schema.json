{
  "pluginAlias": "FlairSE",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "platform": {
        "title": "Platform",
        "type": "string",
        "default": "FlairSE",
        "readOnly": true
      },
      "clientId": {
        "title": "Client ID",
        "type": "string",
        "description": "Flair API OAuth2 client ID"
      },
      "clientSecret": {
        "title": "Client Secret",
        "type": "string",
        "description": "Flair API OAuth2 client secret"
      },
      "refreshToken": {
        "title": "Refresh Token",
        "type": "string",
        "description": "Paste the refresh token generated by auth-helper"
      },
      "pollInterval": {
        "title": "Poll Interval",
        "type": "number",
        "default": 300,
        "description": "How often to refresh device state (seconds)"
      }
    },
    "required": ["platform", "clientId", "clientSecret", "refreshToken"]
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "Flair API OAuth2 Authentication",
      "expandable": false,
      "items": [
        "clientId",
        "clientSecret",
        "refreshToken",
        "pollInterval"
      ]
    }
  ]
}
